<%= form_for @task do |f| %>
	<!-- title, complete, completed_on, user_id, tasklist_id -->
	<%= f.hidden_field :tasklist_id, {:value => params[:task_list_id]} %>
	<%= f.hidden_field :complete, {:value => false} %>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<%= f.label :user %>
	<%= collection_select(
		:task,
		:user_id,
		User.all,
		:id,
		:name) %><br>

	<%= f.submit %>
<% end %>
