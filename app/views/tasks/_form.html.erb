<!-- 11/16/14 Converted to simple_form syntax -->
<%= simple_form_for @task do |f| %>
	<%= f.hidden_field :tasklist_id, {:value => (params[:task_list_id] || 1)} %>
	<% unless @task.complete %>
		<%= f.hidden_field :complete, {:value => false} %>
	<% end %>

    <%= f.input :title %>
	<%= f.input :user_id,  collection: User.all, :prompt => true %>
	<%= f.submit 'Save' %>
<% end %>
