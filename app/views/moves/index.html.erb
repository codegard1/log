<p class="section_links">
	<span class="section_title">Moves</span>
	&nbsp;|&nbsp;&nbsp;	
	<%= link_to 'New Move', new_move_path %> &nbsp;
	<%= link_to 'New Type', new_move_type_path %>
<p>

<!-- Show All Moves -->
<% if @moves.count > 0 %>
	<%= div_for(@moves, class: 'move') do |move| %>
		<p class="date_created"> &nbsp; 
			<%= Time.at(move.created_at.to_i).to_date.inspect %></p>
		<p class="description">&nbsp; 
			<%= link_to move.description, move_path(move) %></p>
		<p class="user_name">&nbsp; 
    			<%= link_to move.user.name, user_path(move.user) %></p>
		<p class="move_type">&nbsp; 
			<%= link_to move.move_type.title, move_type_path(move.move_type) %></p>
		<p class="asset_type">&nbsp; 
			<%= link_to move.asset.asset_type.title, asset_type_path(move.asset.asset_type) %></p>
		<p class="asset_tag">&nbsp;
			<%= link_to move.asset.asset_tag, asset_path(move.asset.asset_tag) %></p>
	<% end %>
<% end %>


