<%= render "shared/navigation_top" %>
<h3>Assets</h3>
<!-- show all Asset -->
<%= div_for(@assets) do |asset| %>
      <span><%= link_to(asset.title || "none") %></span><br>
      <span><strong><%= link_to(asset.asset_type.title,asset_type_path(asset.asset_type)) || "none" %></strong></span><br>
      <span><em><%= link_to(asset.user.name,user_path(asset.user)) %></em></span><br>
      <span><em><%= asset.asset_tag %></em></span>
<% end %>

<%= link_to "New Asset", new_asset_path %> &nbsp; 
<%= link_to "New Type", new_asset_type_path %> &nbsp;
